<UserControl
    x:Class="DatabaseCourceWork.DesktopApplication.Views.LoginView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DatabaseCourceWork.DesktopApplication.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!--  Username  -->
            <RowDefinition Height="Auto" />
            <!--  Password  -->
            <RowDefinition Height="Auto" />
            <!--  Login Button  -->
            <RowDefinition Height="Auto" />
            <!--  Register Button  -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  Username  -->
        <TextBlock
            Grid.Row="0"
            Margin="0,0,10,10"
            VerticalAlignment="Center"
            Text="Email:" />
        <TextBox
            Grid.Row="0"
            Grid.Column="1"
            Margin="0,0,0,10"
            Text="{Binding Email, ValidatesOnNotifyDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
            ToolTip="{Binding (Validation.Errors)[0].ErrorContent, RelativeSource={RelativeSource Self}}" />

        <!--  Password  -->
        <TextBlock
            Grid.Row="1"
            Margin="0,0,10,10"
            VerticalAlignment="Center"
            Text="Password:" />
        <PasswordBox
            x:Name="PasswordBox"
            Grid.Row="1"
            Grid.Column="1"
            Margin="0,0,0,10"
            PasswordChanged="PasswordBox_PasswordChanged"
            ToolTip="{Binding PasswordError}" />

        <!--  Login Button  -->
        <Button
            Grid.Row="2"
            Grid.ColumnSpan="2"
            Margin="0,0,0,10"
            Padding="10,4"
            HorizontalAlignment="Right"
            Command="{Binding LoginCommand}"
            Content="Login" />

        <!--  Register Button  -->
        <Button
            Grid.Row="3"
            Grid.ColumnSpan="2"
            Padding="10,4"
            HorizontalAlignment="Right"
            Command="{Binding OpenRegisterCommand}"
            Content="Register" />
    </Grid>



</UserControl>
