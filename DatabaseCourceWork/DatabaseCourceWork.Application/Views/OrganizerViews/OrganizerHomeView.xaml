<UserControl
    x:Class="DatabaseCourceWork.DesktopApplication.Views.OrganizerViews.OrganizerHomeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:DatabaseCourceWork.DesktopApplication.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DatabaseCourceWork.DesktopApplication.Views.OrganizerViews"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style
            x:Key="TabItemTopText"
            BasedOn="{StaticResource TitleTextBlock}"
            TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource BlueColor}" />
            <Setter Property="FontSize" Value="20" />
        </Style>
        <converters:BoolToTextConverter x:Key="BoolToTextConverter" />
        <DropShadowEffect
            x:Key="CardShadow"
            BlurRadius="10"
            Opacity="0.2"
            ShadowDepth="2"
            Color="Black" />

    </UserControl.Resources>
    <Grid>
        <TabControl Style="{StaticResource LeftVerticalTabControl}">
            <TabItem Header="Home" Style="{StaticResource LeftVerticalTabItem}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel
                        Margin="20"
                        HorizontalAlignment="Center"
                        Orientation="Vertical">
                        <Border
                            Width="350"
                            Margin="20"
                            Padding="20"
                            Background="White"
                            BorderBrush="#CCC"
                            BorderThickness="1"
                            CornerRadius="6">
                            <StackPanel>
                                <TextBlock
                                    FontSize="18"
                                    FontWeight="Bold"
                                    Text="{Binding User.Name}" />

                                <TextBlock
                                    Margin="0,4,0,20"
                                    FontStyle="Italic"
                                    Foreground="Gray"
                                    Text="{Binding User.Email}" />

                                <!--  Role  -->
                                <StackPanel Margin="0,0,0,10" Orientation="Horizontal">
                                    <TextBlock
                                        Width="130"
                                        FontWeight="SemiBold"
                                        Text="Role:" />
                                    <TextBlock Text="{Binding User.Role}" />
                                </StackPanel>

                                <!--  Experience  -->
                                <StackPanel
                                    Margin="0,0,0,10"
                                    VerticalAlignment="Top"
                                    Orientation="Horizontal">
                                    <TextBlock
                                        Width="130"
                                        FontWeight="SemiBold"
                                        Text="Experience:" />
                                    <TextBlock
                                        MaxWidth="190"
                                        Text="{Binding User.Experience}"
                                        TextWrapping="Wrap" />
                                </StackPanel>

                                <!--  Creative Interests  -->
                                <StackPanel
                                    Margin="0"
                                    VerticalAlignment="Top"
                                    Orientation="Horizontal">
                                    <TextBlock
                                        Width="130"
                                        FontWeight="SemiBold"
                                        Text="Creative Interests:" />
                                    <TextBlock
                                        MaxWidth="190"
                                        Text="{Binding User.CreativeInterests}"
                                        TextWrapping="Wrap" />
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>



            <TabItem Header="New Event" Style="{StaticResource LeftVerticalTabItem}">
                <ScrollViewer Padding="10" VerticalScrollBarVisibility="Auto">
                    <StackPanel Width="400" Orientation="Vertical">

                        <!--  Title  -->
                        <TextBlock FontWeight="SemiBold" Text="Title:" />
                        <TextBox Text="{Binding NewEvent.NewEvent.Title, UpdateSourceTrigger=PropertyChanged}" />

                        <!--  Start Date and Time  -->
                        <TextBlock
                            Margin="0,10,0,0"
                            FontWeight="SemiBold"
                            Text="Start Date and Time:" />
                        <DatePicker SelectedDate="{Binding NewEvent.NewEvent.StartDateTime, Mode=TwoWay}" />
                        <TextBox Text="{Binding NewEvent.NewEvent.StartDateTime, StringFormat=HH:mm, Mode=TwoWay}" />

                        <!--  End Date and Time  -->
                        <TextBlock
                            Margin="0,10,0,0"
                            FontWeight="SemiBold"
                            Text="End Date and Time:" />
                        <DatePicker SelectedDate="{Binding NewEvent.NewEvent.EndDateTime, Mode=TwoWay}" />
                        <TextBox Text="{Binding NewEvent.NewEvent.EndDateTime, StringFormat=HH:mm, Mode=TwoWay}" />

                        <!--  Location  -->
                        <TextBlock
                            Margin="0,10,0,0"
                            FontWeight="SemiBold"
                            Text="Location:" />
                        <ComboBox
                            DisplayMemberPath="Name"
                            ItemsSource="{Binding NewEvent.Locations}"
                            SelectedItem="{Binding NewEvent.NewEvent.Location, Mode=TwoWay}" />

                        <!--  Organizer (readonly)  -->
                        <TextBlock
                            Margin="0,10,0,0"
                            FontWeight="SemiBold"
                            Text="Organizer:" />
                        <TextBlock
                            FontStyle="Italic"
                            Foreground="Gray"
                            Text="{Binding NewEvent.Organizer.Name}" />

                        <!--  Description  -->
                        <TextBlock
                            Margin="0,10,0,0"
                            FontWeight="SemiBold"
                            Text="Description:" />
                        <TextBox
                            Height="80"
                            AcceptsReturn="True"
                            Text="{Binding NewEvent.NewEvent.Description, UpdateSourceTrigger=PropertyChanged}"
                            TextWrapping="Wrap" />

                        <!--  Artists (multi-select with checkboxes)  -->
                        <TextBlock
                            Margin="0,10,0,0"
                            FontWeight="SemiBold"
                            Text="Artists:" />
                        <ListBox
                            Height="150"
                            ItemsSource="{Binding NewEvent.Artists}"
                            SelectionMode="Multiple">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox Content="{Binding Name}" IsChecked="{Binding IsSelected, Mode=TwoWay}" />
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <!--  Validation Error Message  -->
                        <TextBlock
                            Margin="0,10,0,0"
                            Foreground="Red"
                            Text="{Binding NewEvent.ValidationErrorMessage}"
                            TextWrapping="Wrap" />

                        <!--  Save Button  -->
                        <Button
                            Margin="0,20,0,0"
                            Padding="6"
                            HorizontalAlignment="Left"
                            Command="{Binding NewEvent.SaveNewEventCommand}"
                            Content="Save Event" />
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="My Events" Style="{StaticResource LeftVerticalTabItem}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Orientation="Vertical">
                        <TextBlock Style="{StaticResource TabItemTopText}" Text="Cultural Events:" />

                        <ItemsControl ItemsSource="{Binding MyEvents}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel IsItemsHost="True" Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>

                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border
                                        Width="300"
                                        Margin="10"
                                        Padding="10"
                                        Background="#FFF"
                                        BorderBrush="{StaticResource BorderBrushGrayColor}"
                                        BorderThickness="1"
                                        CornerRadius="5">

                                        <StackPanel Orientation="Vertical">
                                            <!--  Title  -->
                                            <TextBlock
                                                FontSize="16"
                                                FontWeight="Bold"
                                                Text="{Binding Title}"
                                                TextWrapping="Wrap" />

                                            <!--  Date and Time  -->
                                            <TextBlock FontWeight="SemiBold" Text="Start:" />
                                            <TextBlock
                                                FontSize="12"
                                                Foreground="Gray"
                                                Text="{Binding StartDateTime, StringFormat={}{0:dd MMM yyyy HH:mm}}" />
                                            <TextBlock
                                                Margin="0,5,0,0"
                                                FontWeight="SemiBold"
                                                Text="End:" />
                                            <TextBlock
                                                FontSize="12"
                                                Foreground="Gray"
                                                Text="{Binding EndDateTime, StringFormat={}{0:dd MMM yyyy HH:mm}}" />

                                            <!--  Location  -->
                                            <TextBlock
                                                Margin="0,5,0,0"
                                                FontWeight="SemiBold"
                                                Text="Location:" />
                                            <TextBlock FontStyle="Italic" Text="{Binding Location.Name}" />

                                            <!--  Organizer  -->
                                            <TextBlock
                                                Margin="0,5,0,0"
                                                FontWeight="SemiBold"
                                                Text="Organizer:" />
                                            <TextBlock
                                                FontSize="12"
                                                Foreground="#444"
                                                Text="{Binding Organizer.Name}" />

                                            <!--  Description  -->
                                            <TextBlock
                                                Margin="0,5,0,0"
                                                FontWeight="SemiBold"
                                                Text="Description:" />
                                            <TextBlock
                                                FontSize="12"
                                                Text="{Binding Description}"
                                                TextWrapping="Wrap" />

                                            <!--  Artists Section  -->
                                            <TextBlock
                                                Margin="0,10,0,0"
                                                FontWeight="SemiBold"
                                                Text="Artists:" />
                                            <ItemsControl ItemsSource="{Binding ArtistsPreview}">
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <WrapPanel />
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border
                                                            Margin="2"
                                                            Padding="4"
                                                            Background="#E0F0FF"
                                                            CornerRadius="4">
                                                            <TextBlock
                                                                FontSize="12"
                                                                Foreground="DarkBlue"
                                                                Text="{Binding Name}" />
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                            <Button
                                                Margin="0,5,0,0"
                                                Padding="4,2"
                                                HorizontalAlignment="Left"
                                                Command="{Binding ToggleArtistsCommand}"
                                                Content="{Binding AreArtistsExpanded, Converter={StaticResource BoolToTextConverter}, ConverterParameter='Show more|Show less'}"
                                                FontSize="12" />

                                            <!--  Visitors Section  -->
                                            <TextBlock
                                                Margin="0,10,0,0"
                                                FontWeight="SemiBold"
                                                Text="Visitors:" />
                                            <ItemsControl ItemsSource="{Binding VisitorsPreview}">
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <WrapPanel />
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border
                                                            Margin="2"
                                                            Padding="4"
                                                            Background="#E0FFE0"
                                                            CornerRadius="4">
                                                            <TextBlock
                                                                FontSize="12"
                                                                Foreground="DarkGreen"
                                                                Text="{Binding Name}" />
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                            <Button
                                                Margin="0,5,0,0"
                                                Padding="4,2"
                                                HorizontalAlignment="Left"
                                                Command="{Binding ToggleVisitorsCommand}"
                                                Content="{Binding AreVisitorsExpanded, Converter={StaticResource BoolToTextConverter}, ConverterParameter='Show more|Show less'}"
                                                FontSize="12" />

                                            <!--  Feedbacks Section  -->
                                            <TextBlock
                                                Margin="0,10,0,0"
                                                FontWeight="SemiBold"
                                                Text="Feedbacks:" />
                                            <ItemsControl ItemsSource="{Binding FeedbacksPreview}">
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <WrapPanel />
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border
                                                            Margin="2"
                                                            Padding="6"
                                                            Background="#FFF0E0"
                                                            CornerRadius="4">
                                                            <StackPanel Width="280" Orientation="Vertical">
                                                                <StackPanel
                                                                    Margin="0,0,0,4"
                                                                    VerticalAlignment="Center"
                                                                    Orientation="Horizontal">
                                                                    <TextBlock
                                                                        FontSize="12"
                                                                        FontWeight="Bold"
                                                                        Foreground="#AA5500"
                                                                        Text="{Binding User.Name}" />
                                                                    <TextBlock
                                                                        Margin="6,0,0,0"
                                                                        FontSize="12"
                                                                        Foreground="#AA5500"
                                                                        Text="{Binding Rating, StringFormat=Rating: {0}/5}" />
                                                                </StackPanel>
                                                                <TextBlock
                                                                    FontSize="12"
                                                                    Text="{Binding Comment}"
                                                                    TextWrapping="Wrap" />
                                                                <TextBlock
                                                                    HorizontalAlignment="Right"
                                                                    FontSize="10"
                                                                    Foreground="Gray"
                                                                    Text="{Binding Date, StringFormat={}{0:dd MMM yyyy}}" />
                                                            </StackPanel>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>

                                            <Button
                                                Margin="0,5,0,0"
                                                Padding="4,2"
                                                HorizontalAlignment="Left"
                                                Command="{Binding ToggleFeedbacksCommand}"
                                                Content="{Binding AreFeedbacksExpanded, Converter={StaticResource BoolToTextConverter}, ConverterParameter='Show more|Show less'}"
                                                FontSize="12" />
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="All Events" Style="{StaticResource LeftVerticalTabItem}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Orientation="Vertical">
                        <TextBlock Style="{StaticResource TabItemTopText}" Text="Cultural Events:" />

                        <ItemsControl ItemsSource="{Binding AllEvents}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel IsItemsHost="True" Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>

                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border
                                        Width="300"
                                        Margin="10"
                                        Padding="10"
                                        Background="#FFF"
                                        BorderBrush="{StaticResource BorderBrushGrayColor}"
                                        BorderThickness="1"
                                        CornerRadius="5">

                                        <StackPanel Orientation="Vertical">
                                            <!--  Title  -->
                                            <TextBlock
                                                FontSize="16"
                                                FontWeight="Bold"
                                                Text="{Binding Title}"
                                                TextWrapping="Wrap" />

                                            <!--  Date and Time  -->
                                            <TextBlock FontWeight="SemiBold" Text="Start:" />
                                            <TextBlock
                                                FontSize="12"
                                                Foreground="Gray"
                                                Text="{Binding StartDateTime, StringFormat={}{0:dd MMM yyyy HH:mm}}" />
                                            <TextBlock
                                                Margin="0,5,0,0"
                                                FontWeight="SemiBold"
                                                Text="End:" />
                                            <TextBlock
                                                FontSize="12"
                                                Foreground="Gray"
                                                Text="{Binding EndDateTime, StringFormat={}{0:dd MMM yyyy HH:mm}}" />

                                            <!--  Location  -->
                                            <TextBlock
                                                Margin="0,5,0,0"
                                                FontWeight="SemiBold"
                                                Text="Location:" />
                                            <TextBlock FontStyle="Italic" Text="{Binding Location.Name}" />

                                            <!--  Organizer  -->
                                            <TextBlock
                                                Margin="0,5,0,0"
                                                FontWeight="SemiBold"
                                                Text="Organizer:" />
                                            <TextBlock
                                                FontSize="12"
                                                Foreground="#444"
                                                Text="{Binding Organizer.Name}" />

                                            <!--  Description  -->
                                            <TextBlock
                                                Margin="0,5,0,0"
                                                FontWeight="SemiBold"
                                                Text="Description:" />
                                            <TextBlock
                                                FontSize="12"
                                                Text="{Binding Description}"
                                                TextWrapping="Wrap" />

                                            <!--  Artists Section  -->
                                            <TextBlock
                                                Margin="0,10,0,0"
                                                FontWeight="SemiBold"
                                                Text="Artists:" />
                                            <ItemsControl ItemsSource="{Binding ArtistsPreview}">
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <WrapPanel />
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border
                                                            Margin="2"
                                                            Padding="4"
                                                            Background="#E0F0FF"
                                                            CornerRadius="4">
                                                            <TextBlock
                                                                FontSize="12"
                                                                Foreground="DarkBlue"
                                                                Text="{Binding Name}" />
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                            <Button
                                                Margin="0,5,0,0"
                                                Padding="4,2"
                                                HorizontalAlignment="Left"
                                                Command="{Binding ToggleArtistsCommand}"
                                                Content="{Binding AreArtistsExpanded, Converter={StaticResource BoolToTextConverter}, ConverterParameter='Show more|Show less'}"
                                                FontSize="12" />

                                            <!--  Visitors Section  -->
                                            <TextBlock
                                                Margin="0,10,0,0"
                                                FontWeight="SemiBold"
                                                Text="Visitors:" />
                                            <ItemsControl ItemsSource="{Binding VisitorsPreview}">
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <WrapPanel />
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border
                                                            Margin="2"
                                                            Padding="4"
                                                            Background="#E0FFE0"
                                                            CornerRadius="4">
                                                            <TextBlock
                                                                FontSize="12"
                                                                Foreground="DarkGreen"
                                                                Text="{Binding Name}" />
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                            <Button
                                                Margin="0,5,0,0"
                                                Padding="4,2"
                                                HorizontalAlignment="Left"
                                                Command="{Binding ToggleVisitorsCommand}"
                                                Content="{Binding AreVisitorsExpanded, Converter={StaticResource BoolToTextConverter}, ConverterParameter='Show more|Show less'}"
                                                FontSize="12" />

                                            <!--  Feedbacks Section  -->
                                            <TextBlock
                                                Margin="0,10,0,0"
                                                FontWeight="SemiBold"
                                                Text="Feedbacks:" />
                                            <ItemsControl ItemsSource="{Binding FeedbacksPreview}">
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <WrapPanel />
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border
                                                            Margin="2"
                                                            Padding="6"
                                                            Background="#FFF0E0"
                                                            CornerRadius="4">
                                                            <StackPanel Width="280" Orientation="Vertical">
                                                                <StackPanel
                                                                    Margin="0,0,0,4"
                                                                    VerticalAlignment="Center"
                                                                    Orientation="Horizontal">
                                                                    <TextBlock
                                                                        FontSize="12"
                                                                        FontWeight="Bold"
                                                                        Foreground="#AA5500"
                                                                        Text="{Binding User.Name}" />
                                                                    <TextBlock
                                                                        Margin="6,0,0,0"
                                                                        FontSize="12"
                                                                        Foreground="#AA5500"
                                                                        Text="{Binding Rating, StringFormat=Rating: {0}/5}" />
                                                                </StackPanel>
                                                                <TextBlock
                                                                    FontSize="12"
                                                                    Text="{Binding Comment}"
                                                                    TextWrapping="Wrap" />
                                                                <TextBlock
                                                                    HorizontalAlignment="Right"
                                                                    FontSize="10"
                                                                    Foreground="Gray"
                                                                    Text="{Binding Date, StringFormat={}{0:dd MMM yyyy}}" />
                                                            </StackPanel>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>

                                            <Button
                                                Margin="0,5,0,0"
                                                Padding="4,2"
                                                HorizontalAlignment="Left"
                                                Command="{Binding ToggleFeedbacksCommand}"
                                                Content="{Binding AreFeedbacksExpanded, Converter={StaticResource BoolToTextConverter}, ConverterParameter='Show more|Show less'}"
                                                FontSize="12" />
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>





            <TabItem Header="Artists" Style="{StaticResource LeftVerticalTabItem}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Orientation="Vertical">
                        <TextBlock Style="{StaticResource TabItemTopText}" Text="Artists:" />

                        <ItemsControl ItemsSource="{Binding Artists}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>

                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border
                                        Width="300"
                                        Margin="10"
                                        Padding="10"
                                        Background="#FFF9F0"
                                        BorderBrush="#D4A373"
                                        BorderThickness="1"
                                        CornerRadius="6">
                                        <StackPanel>
                                            <TextBlock
                                                FontSize="16"
                                                FontWeight="Bold"
                                                Text="{Binding Name}" />
                                            <TextBlock
                                                Margin="0,2,0,4"
                                                Foreground="Gray"
                                                Text="{Binding Email}" />

                                            <TextBlock FontWeight="SemiBold" Text="Experience:" />
                                            <TextBlock
                                                MaxWidth="260"
                                                Text="{Binding Experience}"
                                                TextWrapping="Wrap" />

                                            <TextBlock
                                                Margin="0,5,0,0"
                                                FontWeight="SemiBold"
                                                Text="Creative Interests:" />
                                            <TextBlock
                                                MaxWidth="260"
                                                Text="{Binding CreativeInterests}"
                                                TextWrapping="Wrap" />
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>


            <TabItem Header="Locations" Style="{StaticResource LeftVerticalTabItem}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Orientation="Vertical">
                        <TextBlock Style="{StaticResource TabItemTopText}" Text="Locations:" />

                        <ItemsControl ItemsSource="{Binding Locations}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>

                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border
                                        Width="320"
                                        Margin="10"
                                        Padding="10"
                                        Background="#F0F8FF"
                                        BorderBrush="#70A1FF"
                                        BorderThickness="1"
                                        CornerRadius="6">
                                        <StackPanel Orientation="Horizontal">
                                            <Image
                                                Width="100"
                                                Height="100"
                                                Margin="5"
                                                Source="{Binding PhotoImage}" />

                                            <StackPanel
                                                Width="190"
                                                Margin="10,0,0,0"
                                                VerticalAlignment="Center">
                                                <TextBlock
                                                    FontSize="16"
                                                    FontWeight="Bold"
                                                    Text="{Binding Name}" />

                                                <TextBlock
                                                    Margin="0,2,0,2"
                                                    FontStyle="Italic"
                                                    Text="{Binding Address}" />

                                                <TextBlock FontWeight="SemiBold" Text="Capacity:" />
                                                <TextBlock Margin="0,0,0,4" Text="{Binding Capacity}" />

                                                <TextBlock
                                                    MaxWidth="190"
                                                    Text="{Binding Description}"
                                                    TextWrapping="Wrap" />
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>


        </TabControl>
    </Grid>
</UserControl>
