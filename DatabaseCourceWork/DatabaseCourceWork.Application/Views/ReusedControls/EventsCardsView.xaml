<UserControl
    x:Class="DatabaseCourceWork.DesktopApplication.Views.ReusedControls.EventsCardsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DatabaseCourceWork.DesktopApplication.Views.ReusedControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <DropShadowEffect
            x:Key="CardShadow"
            BlurRadius="10"
            Opacity="0.2"
            ShadowDepth="2"
            Color="Black" />
        <DataTemplate x:Key="EventCardDataTemplate">
            <Border
                Width="300"
                Margin="10"
                Padding="10"
                Background="#FFF"
                BorderBrush="{StaticResource BorderBrushGrayColor}"
                BorderThickness="1"
                CornerRadius="5">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Vertical">
                        <!--  Title  -->
                        <StackPanel
                            Margin="0,0,0,4"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <!--  Colored bullet with trigger-based fill  -->
                            <Ellipse
                                Width="10"
                                Height="10"
                                Margin="0,0,6,0">
                                <Ellipse.Style>
                                    <Style TargetType="Ellipse">
                                        <Setter Property="Fill" Value="LightGray" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsUpcoming}" Value="True">
                                                <Setter Property="Fill" Value="Green" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Ellipse.Style>
                            </Ellipse>

                            <!--  Title  -->
                            <TextBlock
                                FontSize="16"
                                FontWeight="Bold"
                                Text="{Binding Title}"
                                TextWrapping="Wrap" />
                        </StackPanel>

                        <!--  Date and Time  -->
                        <TextBlock FontWeight="SemiBold" Text="Start:" />
                        <TextBlock
                            FontSize="12"
                            Foreground="Gray"
                            Text="{Binding StartDateTime, StringFormat={}{0:dd MMM yyyy HH:mm}}" />
                        <TextBlock
                            Margin="0,5,0,0"
                            FontWeight="SemiBold"
                            Text="End:" />
                        <TextBlock
                            FontSize="12"
                            Foreground="Gray"
                            Text="{Binding EndDateTime, StringFormat={}{0:dd MMM yyyy HH:mm}}" />

                        <!--  Location  -->
                        <TextBlock
                            Margin="0,5,0,0"
                            FontWeight="SemiBold"
                            Text="Location:" />
                        <TextBlock FontStyle="Italic" Text="{Binding Location.Name}" />

                        <!--  Organizer  -->
                        <TextBlock
                            Margin="0,5,0,0"
                            FontWeight="SemiBold"
                            Text="Organizer:" />
                        <TextBlock
                            FontSize="12"
                            Foreground="#444"
                            Text="{Binding Organizer.Name}" />
                        <!--  Price  -->
                        <TextBlock
                            Margin="0,5,0,0"
                            FontWeight="SemiBold"
                            Text="Price:" />
                        <TextBlock
                            FontSize="12"
                            Foreground="DarkRed"
                            Text="{Binding Price, StringFormat=₴{0}}" />
                        <!--  Description  -->
                        <TextBlock
                            Margin="0,5,0,0"
                            FontWeight="SemiBold"
                            Text="Description:" />
                        <TextBlock
                            FontSize="12"
                            Text="{Binding Description}"
                            TextWrapping="Wrap" />

                        <!--  Artists Section  -->
                        <TextBlock
                            Margin="0,10,0,0"
                            FontWeight="SemiBold"
                            Text="Artists:" />
                        <ItemsControl ItemsSource="{Binding ArtistsPreview}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border
                                        Margin="2"
                                        Padding="4"
                                        Background="#E0F0FF"
                                        CornerRadius="4">
                                        <TextBlock
                                            FontSize="12"
                                            Foreground="DarkBlue"
                                            Text="{Binding Name}" />
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        <Button
                            Margin="0,5,0,0"
                            Padding="4,2"
                            HorizontalAlignment="Left"
                            Command="{Binding ToggleArtistsCommand}"
                            Content="{Binding AreArtistsExpanded, Converter={StaticResource BoolToTextConverter}, ConverterParameter='Show more|Show less'}"
                            FontSize="12" />

                        <!--  Visitors Section  -->
                        <TextBlock Margin="0,10,0,0">
                            <Run FontWeight="SemiBold" Text="Visitors: " />
                            <Run
                                FontWeight="Bold"
                                Foreground="DarkGreen"
                                Text="{Binding VisitorsCount, Mode=OneTime}" />
                        </TextBlock>
                        <ItemsControl ItemsSource="{Binding VisitorsPreview}" Visibility="{Binding DataContext.DisplayVisitors, RelativeSource={RelativeSource AncestorType=UserControl}}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border
                                        Margin="2"
                                        Padding="4"
                                        Background="#E0FFE0"
                                        CornerRadius="4">
                                        <TextBlock
                                            FontSize="12"
                                            Foreground="DarkGreen"
                                            Text="{Binding Name}" />
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        <Button
                            Margin="0,5,0,0"
                            Padding="4,2"
                            HorizontalAlignment="Left"
                            Command="{Binding ToggleVisitorsCommand}"
                            Content="{Binding AreVisitorsExpanded, Converter={StaticResource BoolToTextConverter}, ConverterParameter='Show more|Show less'}"
                            FontSize="12"
                            Visibility="{Binding DataContext.DisplayVisitors, RelativeSource={RelativeSource AncestorType=UserControl}}" />

                        <!--  Feedbacks Section  -->
                        <TextBlock
                            Margin="0,10,0,0"
                            FontWeight="SemiBold"
                            Text="Feedbacks:" />
                        <ItemsControl ItemsSource="{Binding FeedbacksPreview}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border
                                        Margin="2"
                                        Padding="6"
                                        Background="#FFF0E0"
                                        CornerRadius="4">
                                        <StackPanel Width="280" Orientation="Vertical">
                                            <StackPanel
                                                Margin="0,0,0,4"
                                                VerticalAlignment="Center"
                                                Orientation="Horizontal">
                                                <TextBlock
                                                    FontSize="12"
                                                    FontWeight="Bold"
                                                    Foreground="#AA5500"
                                                    Text="{Binding User.Name}" />
                                                <TextBlock
                                                    Margin="6,0,0,0"
                                                    FontSize="12"
                                                    Foreground="#AA5500"
                                                    Text="{Binding Rating, StringFormat=Rating: {0}/5}" />
                                            </StackPanel>
                                            <TextBlock
                                                FontSize="12"
                                                Text="{Binding Comment}"
                                                TextWrapping="Wrap" />
                                            <TextBlock
                                                HorizontalAlignment="Right"
                                                FontSize="10"
                                                Foreground="Gray"
                                                Text="{Binding Date, StringFormat={}{0:dd MMM yyyy}}" />
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <Button
                            Margin="0,5,0,0"
                            Padding="4,2"
                            HorizontalAlignment="Left"
                            Command="{Binding ToggleFeedbacksCommand}"
                            Content="{Binding AreFeedbacksExpanded, Converter={StaticResource BoolToTextConverter}, ConverterParameter='Show more|Show less'}"
                            FontSize="12" />
                    </StackPanel>

                    <StackPanel
                        Grid.Row="1"
                        Margin="0,10,0,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        Orientation="Vertical">

                        <Button
                            Width="120"
                            Padding="6,4"
                            Background="#FF007ACC"
                            Command="{Binding LeaveFeedbackCommand}"
                            Content="Leave Feedback"
                            FontWeight="Bold"
                            Foreground="White"
                            Visibility="{Binding LeaveFeedbackButtonVisibility}" />

                        <Button
                            Width="120"
                            Padding="6,4"
                            Background="#FF28A745"
                            Command="{Binding JoinEventCommand}"
                            Content="Join Event"
                            FontWeight="Bold"
                            Foreground="White"
                            Visibility="{Binding JoinEventButtonVisibility}" />
                        <TextBlock
                            Margin="10,8,0,0"
                            FontSize="12"
                            FontWeight="SemiBold"
                            Foreground="Green"
                            Text="You have successfully joined this event!"
                            Visibility="{Binding IsEventJoined, Converter={StaticResource BoolToVisibilityConverter}}" />
                    </StackPanel>

                </Grid>
            </Border>
        </DataTemplate>
    </UserControl.Resources>
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Orientation="Vertical">
            <TextBlock Style="{StaticResource TabItemTopText}" Text="Cultural Events:" />

            <StackPanel Orientation="Horizontal">
                <CheckBox
                    Content="Upcoming"
                    IsChecked="{Binding IsUpcomingVisible}"
                    Style="{StaticResource CheckBoxStyle}" />
                <CheckBox
                    Content="Old"
                    IsChecked="{Binding IsOldVisible}"
                    Style="{StaticResource CheckBoxStyle}" />
            </StackPanel>

            <ItemsControl ItemTemplate="{StaticResource EventCardDataTemplate}" ItemsSource="{Binding Events}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel IsItemsHost="True" Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </StackPanel>
    </ScrollViewer>
</UserControl>
