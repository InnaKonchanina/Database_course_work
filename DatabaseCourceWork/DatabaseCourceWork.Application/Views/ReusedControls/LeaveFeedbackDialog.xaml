<Window
    x:Class="DatabaseCourceWork.DesktopApplication.Views.ReusedControls.LeaveFeedbackDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Leave Feedback"
    Width="436"
    Height="323"
    ResizeMode="NoResize"
    SizeToContent="WidthAndHeight"
    WindowStartupLocation="CenterOwner">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  Rating  -->
        <TextBlock
            FontWeight="Bold"
            Style="{StaticResource GenericTextBlock}"
            Text="Rating (1–5):" />
        <ComboBox
            Grid.Column="1"
            SelectedIndex="{Binding Rating}"
            Style="{StaticResource BlueComboBoxStyle}">
            <ComboBoxItem Content="1" />
            <ComboBoxItem Content="2" />
            <ComboBoxItem Content="3" />
            <ComboBoxItem Content="4" />
            <ComboBoxItem Content="5" />
        </ComboBox>


        <!--  Comment  -->
        <TextBlock
            Grid.Row="1"
            Margin="0,10,0,0"
            FontWeight="Bold"
            Style="{StaticResource GenericTextBlock}"
            Text="Comment:" />
        <TextBox
            Grid.Row="2"
            Grid.ColumnSpan="2"
            Height="80"
            Margin="0,10,0,10"
            AcceptsReturn="True"
            Style="{StaticResource GeneralTextBoxStyle}"
            Text="{Binding Comment}"
            TextWrapping="Wrap"
            VerticalScrollBarVisibility="Auto" />

        <!--  Buttons  -->
        <StackPanel
            Grid.Row="3"
            Grid.ColumnSpan="2"
            Margin="0,10,0,0"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Button
                Width="80"
                Margin="0,0,10,0"
                Command="{Binding CancelCommand}"
                CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                Content="Cancel"
                IsDefault="True" />
            <Button
                Width="80"
                Background="#FF28A745"
                Command="{Binding SubmitCommand}"
                CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                Content="Submit"
                FontWeight="Bold"
                Foreground="White"
                IsCancel="True" />
        </StackPanel>
    </Grid>
</Window>
