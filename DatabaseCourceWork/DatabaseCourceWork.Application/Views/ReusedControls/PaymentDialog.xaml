<Window
    x:Class="DatabaseCourceWork.DesktopApplication.Views.ReusedControls.PaymentDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="{Binding EventName, StringFormat='Payment for {0}'}"
    Width="400"
    Height="300"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterOwner">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  Price  -->
        <TextBlock
            Grid.ColumnSpan="2"
            Margin="0,0,0,10"
            FontSize="14"
            FontWeight="Bold"
            Foreground="DarkGreen"
            Text="{Binding Price, StringFormat=Price: {0:C}}" />

        <!--  Card Number  -->
        <TextBlock
            Grid.Row="1"
            VerticalAlignment="Center"
            Text="Card Number:" />
        <TextBox
            Grid.Row="1"
            Grid.Column="1"
            Margin="5,4"
            MaxLength="19"
            Text="{Binding CardNumber, UpdateSourceTrigger=PropertyChanged}" />

        <!--  Expiry Date  -->
        <TextBlock
            Grid.Row="2"
            VerticalAlignment="Center"
            Text="Expiry Date (MM/YY):" />
        <TextBox
            Grid.Row="2"
            Grid.Column="1"
            Margin="5,4"
            MaxLength="5"
            Text="{Binding ExpiryDate, UpdateSourceTrigger=PropertyChanged}" />

        <!--  CVV  -->
        <TextBlock
            Grid.Row="3"
            VerticalAlignment="Center"
            Text="CVV:" />
        <TextBox
            Grid.Row="3"
            Grid.Column="1"
            Width="60"
            Margin="5,4"
            MaxLength="4"
            Text="{Binding Cvv, UpdateSourceTrigger=PropertyChanged}" />

        <!--  Error Message  -->
        <TextBlock
            Grid.Row="4"
            Grid.ColumnSpan="2"
            Margin="0,10,0,0"
            Foreground="Red"
            Text="{Binding ErrorMessage}"
            TextWrapping="Wrap" />

        <!--  Buttons  -->
        <StackPanel
            Grid.Row="5"
            Grid.ColumnSpan="2"
            Margin="0,10,0,0"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Button
                Width="80"
                Margin="0,0,10,0"
                Command="{Binding CancelCommand}"
                CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                Content="Cancel" />
            <Button
                Width="80"
                Background="#FF28A745"
                Command="{Binding PayCommand}"
                CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                Content="Pay"
                FontWeight="Bold"
                Foreground="White" />
        </StackPanel>
    </Grid>
</Window>
