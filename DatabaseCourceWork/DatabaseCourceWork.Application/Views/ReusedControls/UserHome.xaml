<UserControl
    x:Class="DatabaseCourceWork.DesktopApplication.Views.ReusedControls.UserHome"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DatabaseCourceWork.DesktopApplication.Views.ReusedControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel
                Margin="20"
                HorizontalAlignment="Center"
                Orientation="Vertical">

                <Border
                    Width="350"
                    Margin="20"
                    Padding="20"
                    Background="White"
                    BorderBrush="#CCC"
                    BorderThickness="1"
                    CornerRadius="6">

                    <StackPanel>

                        <!--  Name и Email (только чтение)  -->
                        <TextBlock
                            FontSize="18"
                            FontWeight="Bold"
                            Text="{Binding Name}" />

                        <TextBlock
                            Margin="0,4,0,20"
                            FontStyle="Italic"
                            Foreground="Gray"
                            Text="{Binding Email}" />

                        <!--  Role (только чтение)  -->
                        <StackPanel Margin="0,0,0,10" Orientation="Horizontal">
                            <TextBlock
                                Width="130"
                                FontWeight="SemiBold"
                                Text="Role:" />
                            <TextBlock Text="{Binding Role}" />
                        </StackPanel>

                        <!--  Фото  -->
                        <Image
                            Width="120"
                            Height="120"
                            Margin="0,0,0,10"
                            Source="{Binding PhotoImage}"
                            Stretch="UniformToFill" />

                        <!--  Кнопка смены фото  -->
                        <Button
                            Width="120"
                            Click="ChangePhotoButton_Click"
                            Content="Change Photo" />

                        <!--  Experience  -->
                        <Grid Margin="0,20,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="130" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock
                                Grid.Column="0"
                                VerticalAlignment="Top"
                                FontWeight="SemiBold"
                                Text="Experience:" />
                            <TextBox
                                Grid.Column="1"
                                MinHeight="60"
                                AcceptsReturn="True"
                                Text="{Binding Experience, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                TextWrapping="Wrap" />
                        </Grid>

                        <!--  Creative Interests  -->
                        <Grid Margin="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="130" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock
                                Grid.Column="0"
                                VerticalAlignment="Top"
                                FontWeight="SemiBold"
                                Text="Creative Interests:" />
                            <TextBox
                                Grid.Column="1"
                                MinHeight="60"
                                AcceptsReturn="True"
                                Text="{Binding CreativeInterests, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                TextWrapping="Wrap" />
                        </Grid>


                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
